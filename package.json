{
  "name": "tengo-restriccion",
  "version": "1.0.0",
  "repository" : "SantiagoLab/tengo-restriccion",
  "description": "App para notificacion de restriccion vehicular segun patente",
  "scripts": {
    "start": "parallelshell \"NODE_ENV=development nodemon index.js\"  \"node webpack-server.js\" \"npm run watch\"",
    "win": "parallelshell \"set NODE_ENV=development&&nodemon index.js\"  \"node webpack-server.js\" \"npm run watch\"",
    "production": "NODE_ENV=production pm2 start index.js",
    "test": "eslint . && NODE_ENV=test mocha --compilers js:babel/register --reporter spec 'app/**/__tests__/*-test.js'",
    "build": "npm run build:css && NODE_ENV=production npm run build:bundle",
    "build:bundle": "webpack -p --config webpack.config.production.js",
    "build:css:dev": "node-sass public/scss/screen.scss -o public/css/ --source-map public/scss/screen.css.map && postcss --use autoprefixer -d public/css/ public/css/screen.css",
    "build:css": "npm run build:css:dev && cleancss -o public/css/screen.css public/css/screen.css",
    "watch": "onchange \"public/scss/**/*.scss\" -- npm run build:css:dev"
  },
  "author": "SantiagoLab.cl <contact@santiagolab.cl>",
  "license": "GPL-3.0",
  "dependencies": {
    "axios": "^0.5.4",
    "babel": "^5.8.20",
    "babel-core": "^5.8.20",
    "babel-eslint": "^4.0.5",
    "babel-loader": "^5.3.2",
    "bunyan": "^1.4.0",
    "chai": "^3.2.0",
    "chai-as-promised": "^5.1.0",
    "chai-things": "^0.2.0",
    "cheerio": "^0.19.0",
    "koa": "^0.21.0",
    "koa-body": "^1.2.1",
    "koa-helmet": "^0.2.0",
    "koa-route": "^2.4.2",
    "kue": "^0.9.4",
    "mandrill-api": "^1.0.45",
    "mocha": "^2.2.5",
    "moment": "^2.10.6",
    "mongoose": "^4.1.1",
    "parallelshell": "^1.2.0",
    "ramda": "^0.17.1",
    "rand-token": "^0.2.1",
    "react": "^0.14.0-beta3",
    "react-dom": "^0.14.0-beta3",
    "react-redux": "^0.2.2",
    "redux": "^1.0.0-rc",
    "redux-thunk": "^0.1.0",
    "request": "^2.60.0",
    "validator": "^4.0.2"
  },
  "devDependencies": {
    "autoprefixer": "^5.2.0",
    "babel-runtime": "^5.8.20",
    "clean-css": "^3.3.7",
    "eslint": "^1.0.0",
    "eslint-plugin-react": "^3.2.0",
    "koa-static": "^1.4.9",
    "node-libs-browser": "^0.5.2",
    "node-sass": "^3.2.0",
    "onchange": "^1.1.0",
    "postcss-cli": "^1.5.0",
    "react-hot-loader": "^1.2.8",
    "supertest": "^1.0.1",
    "supertest-as-promised": "^2.0.2",
    "uglify-js": "^2.4.24",
    "webpack": "^1.10.5",
    "webpack-dev-server": "^1.10.1"
  }
}
